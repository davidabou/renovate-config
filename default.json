{
  "description": "Renovate configuration for david's repositories",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":semanticCommitTypeAll(chore)"
  ],
  "rangeStrategy": "bump",
  "npm": {
    "commitMessageTopic": "{{prettyDepType}} {{depName}}"
  },
  "labels": ["dependencies"],
  "packageRules": [
    {
      "dependencyDashboardApproval": true,
      "matchUpdateTypes": ["major"]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeSchedule": [
        "* 0-3 * * *"
      ],
      "schedule": ["* 0-3 * * *"]
    }
  ]
}
